<Window x:Class="Tesoreria.TotalRepartos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesoreria"
        mc:Ignorable="d"
        Title="TotalRepartos" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50 0 0 0 ">

            <Label Content="Totales de Repartos"></Label>
            <Label x:Name="HorayFecha"></Label>
            <DataGrid Height="247" Margin="0,0,490,0" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Repartos" Width="160"></DataGridTextColumn>
                    <DataGridTextColumn Header="Total" Width="90"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">

                <Button Content="Imprimir" Width="50" Margin="60 0 30 0"></Button>
                <Button Content="Salir" Width="50"></Button>
                                
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
